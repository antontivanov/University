<UserControl x:Class="PasswordKeeper.Views.SideMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordKeeper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="200">
    <Grid>
        <Button x:Name="NewPasswordButton" Content="Create New Password" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Background="Aqua" Command="{Binding IsCreateNewPasswordChosen}"/>
        <Button x:Name="ViewPasswordsButton" Content="View Passwords" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="0,20,0,0" Background="Aqua" Command="{Binding IsViewPasswordsChosen}"/>
        <Button x:Name="DeletePasswordButton" Content="Delete Password" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="0,40,0,0" Background="Aqua" Command="{Binding IsShowDeletePasswordChosen}"/>
        <Button x:Name="SettingsButton" Content="Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="0,60,0,0" Background="Aqua" Command="{Binding IsShowSettingsChosen}"/>

    </Grid>
</UserControl>
